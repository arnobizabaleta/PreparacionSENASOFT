
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">

                <form action="@Url.Action("Registrar","Acceso")" method="post" class="bg-info" style="padding:1em;">

                    <div class="form-group">
                        <label>Nombres:</label>
                        <input type="text" name="Nombres" class="form-control" placeholder="Tú Nombre" required="" />
                    </div>

                    <div class="form-group">
                        <label>Correo:</label>
                        <input type="email" name="Correo" class="form-control" placeholder="nm@mail.com" required="" />
                    </div>

                    <div class="form-group">
                        <label>Contraseña:</label>
                        <input type="password" name="Clave" class="form-control" placeholder="" required="" />
                    </div>

                    <div class="form-group">
                        <label>Confirmar Contraseña:</label>
                        <input type="password" name="confirmarClave" class="form-control" placeholder="" required="" />
                    </div>
                    <p>Ya tienes una cuenta? @Html.ActionLink("Iniciar Sesión", "Index", "Acceso")</p>
                    @if (ViewData["Mensaje"] != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewData["Mensaje"]
                        </div>
                    }
                    <button type="submit" class="btn btn-success">Ingresar</button>
                </form>


            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
